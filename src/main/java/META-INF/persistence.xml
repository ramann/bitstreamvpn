<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <mapping-file>com/company/dev/model/Product.xml</mapping-file>
        <mapping-file>com/company/dev/model/Users.xml</mapping-file>
        <mapping-file>com/company/dev/model/Purchase.xml</mapping-file>
        <mapping-file>com/company/dev/model/Certificate.xml</mapping-file>
        <mapping-file>com/company/dev/Certificate.xml</mapping-file>
        <class>com.company.dev.model.Product</class>
        <class>com.company.dev.model.Users</class>
        <class>com.company.dev.model.Purchase</class>
        <class>com.company.dev.model.Certificate</class>
        <class>com.company.dev.Certificate</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/test1"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="test1"/>
            <property name="hibernate.connection.password" value="testing"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
