<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.company.dev.model.Users">
        <table name="users" schema="public" catalog="test1"/>
        <attributes>
            <id name="username">
                <column name="username" length="30"/>
            </id>
            <basic name="password">
                <column name="password" length="64"/>
            </basic>
            <basic name="salt">
                <column name="salt" length="16"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
