<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.company.dev.model.Purchase">
        <table name="purchase" schema="public" catalog="test1"/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <many-to-one name="users" fetch="LAZY">
                <join-column name="username"/>
            </many-to-one>
            <basic name="dateInitiated">
                <column name="date_initiated" precision="-1"/>
            </basic>
            <basic name="amount">
                <column name="amount" precision="8"/>
            </basic>
            <basic name="receivingAddress">
                <column name="receiving_address" length="40"/>
            </basic>
            <basic name="dateConfirm1">
                <column name="date_confirm_1" precision="-1"/>
            </basic>
            <basic name="dateConfirm3">
                <column name="date_confirm_3" precision="-1"/>
            </basic>
            <basic name="dateConfirm6">
                <column name="date_confirm_6" precision="-1"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
