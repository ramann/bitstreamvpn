<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.company.dev.model.app.domain.Product">
        <table name="product" schema="public" catalog="test1"/>
        <attributes>
            <id name="productId">
                <column name="product_id" precision="-1"/>
            </id>
            <basic name="title">
                <column name="title" length="40"/>
            </basic>
            <basic name="descr">
                <column name="descr" length="128"/>
            </basic>
            <basic name="price">
                <column name="price" precision="2"/>
            </basic>
            <basic name="countAvail">
                <column name="count_avail" precision="-1"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
